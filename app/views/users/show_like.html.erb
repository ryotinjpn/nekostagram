<!--プロフィール欄のいいね一覧クリック遷移先-->
<% provide(:title, @title) %>

<div class="row">

  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @user.likes.any? %>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
  
  <aside class="col-md-4">
    <section class="user_info">
    <div class="user_top">
      <h1>
        <% if !@user.image.blank?%>
            <img src=<%= @user.image %> class = "icon_image_prof">
        <% else %>
            <%= image_tag 'usericon.png' %>
        <% end %>
        
        <%= @user.name %>
        </div>
        <%= @user.profile %>
        <%= render 'follow_form' if user_signed_in? %>
      </h1>
    </section>
    
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>

</div>